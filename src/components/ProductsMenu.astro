---
import {Image} from 'astro:assets'
import Brigadeiros from '../assets/images/brigadeiros.jpg'
import produtosBuque from '../assets/images/produtos-buque.jpg'
---

<!-- !!! Imagens: 650x400 -->
<section>
    <!-- Esquerda - Buquês -->
    <div class='px-20'>
        <a href='/buques'>
            <div class='md:px-20 sm:px-20 max-sm:px-4 grid grid-cols-8 relative px-16 py-3 group'>
                <Image
                    src={produtosBuque}
                    alt='Categoria Brigadeiros'
                    class='rounded-2xl col-start-1 col-span-3 hover:scale-[101%] cursor-pointer duration-500'
                />
                <div
                    class='col-start-4 flex flex-col justify-center text-left space-y-8 absolute right-[700px] top-[180px]'>
                    <h1 class='font-semibold text-8xl text-slate-800'>Buquês</h1>
                    <h1 class=''>Conheça nossos brigadeiros! São docinhos especiais</h1>
                </div>
            </div>
        </a>
    </div>

    <!-- Direita - Presentes -->
    <div class='px-20'>
        <div class='md:px-20 sm:px-20 max-sm:px-4 grid grid-cols-8 relative px-16 py-3'>
            <div
                class='flex flex-col justify-center text-right space-y-8 absolute right-[710px] top-[180px]'>
                <h1 class='font-semibold text-8xl text-slate-800'>Presentes</h1>
                <h1 class=''>Conheça nossos brigadeiros! São docinhos especiais</h1>
            </div>
            <Image
                src={Brigadeiros}
                alt='Categoria Brigadeiros'
                class='rounded-2xl col-start-6 col-span-3 hover:scale-[101%] cursor-pointer duration-500'
            />
        </div>
    </div>

    <!-- Esquerda - Trufas -->
    <div class='px-20'>
        <div class='md:px-20 sm:px-20 max-sm:px-4 grid grid-cols-8 relative px-16 py-3'>
            <Image
                src={Brigadeiros}
                alt='Categoria Brigadeiros'
                class='rounded-2xl col-start-1 col-span-3 hover:scale-[101%] cursor-pointer duration-500'
            />
            <div
                class='col-start-4 flex flex-col justify-center text-left space-y-8 absolute right-[700px] top-[180px]'>
                <h1 class='font-semibold text-8xl text-slate-800'>Trufas</h1>
                <h1 class=''>Conheça nossos brigadeiros! São docinhos especiais</h1>
            </div>
        </div>
    </div>

    <!-- Direita - Brigadeiros -->
    <div class='px-20'>
        <div class='md:px-20 sm:px-20 max-sm:px-4 grid grid-cols-8 relative px-16 py-3'>
            <div
                class='flex flex-col justify-center text-right space-y-8 absolute right-[710px] top-[180px]'>
                <h1 class='font-semibold text-8xl text-slate-800'>Brigadeiros</h1>
                <h1 class=''>Conheça nossos brigadeiros! São docinhos especiais</h1>
            </div>
            <Image
                src={Brigadeiros}
                alt='Categoria Brigadeiros'
                class='rounded-2xl col-start-6 col-span-3 hover:scale-[101%] cursor-pointer duration-500'
            />
        </div>
    </div>
</section>

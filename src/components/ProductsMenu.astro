---
import {Image} from 'astro:assets'
import Brigadeiros from '../assets/images/brigadeiros.jpg'
---

<!-- Esquerda - Buquês -->
<section class='px-20'>
    <div class='md:px-20 sm:px-20 max-sm:px-4 grid grid-cols-8 relative p-16'>
        <Image
            src={Brigadeiros}
            alt='Categoria Brigadeiros'
            class='rounded-2xl col-start-1 col-span-3 hover:scale-[101%] cursor-pointer duration-500'
        />
        <div
            class='col-start-4 flex flex-col justify-center text-left space-y-8 absolute right-[700px] top-[180px]'>
            <h1 class='font-semibold text-8xl text-slate-800'>Buquês</h1>
            <h1 class=''>Conheça nossos brigadeiros! São docinhos especiais</h1>
        </div>
    </div>
</section>

